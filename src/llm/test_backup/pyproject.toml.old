[project]
name = "explainmybody-llm"
version = "0.1.0"
description = "ExplainMyBody LLM workflow system with PostgreSQL and pgvector"
readme = "README.md"
dependencies = [
    "anthropic>=0.76.0",
    "numpy>=2.4.1",
    "openai>=2.15.0",
    "psycopg2-binary>=2.9.9",
    "pydantic>=2.12.5",
    "pydantic-settings>=2.12.0",
    "python-dotenv>=1.2.1",
    "requests>=2.32.5",
    "sqlalchemy>=2.0.0",
    "alembic>=1.13.0",
]

[project.optional-dependencies]
dev = [
    "pytest>=7.0.0",
    "black>=23.0.0",
    "mypy>=1.0.0",
]

[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools]
packages = ["rule_based_bodytype", "rule_based_bodytype.body_analysis"]

[tool.black]
line-length = 100
target-version = ["py311", "py312"]

[tool.mypy]
python_version = "3.11"
warn_return_any = true
warn_unused_configs = true
disallow_untyped_defs = false
